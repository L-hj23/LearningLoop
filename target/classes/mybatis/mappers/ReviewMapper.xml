<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ReviewMapper">

    <!-- 전체 리뷰 목록 조회 -->
    <select id="getReviews" resultType="ReviewVO">
        SELECT * FROM reviews;
    </select>

    <!-- 특정 강의의 리뷰 목록 조회 -->
    <select id="getReviewsByLectureId" parameterType="int" resultType="ReviewVO">
        SELECT * FROM reviews WHERE lecture_id = #{lectureId};
    </select>

    <!-- 리뷰 추가 -->
    <insert id="addReview" parameterType="ReviewVO">
        INSERT INTO reviews (author, content, date, lecture_id) 
        VALUES (#{author}, #{content}, #{date}, #{lectureId});
    </insert>

</mapper>
